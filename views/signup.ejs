<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DStudio</title>
    <link rel="icon" href="/images/dbox.png" >

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script>
      function chooseDept(ele){
        document.getElementById('buttonDept').innerText=ele.innerText;
       document.getElementById('department').value=ele.innerText;
      }
    </script>
</head>
<body>
    <nav class="navbar navbar-light bg-primary">
       <span class="navbar-brand mb-0 h1 mx-auto">
      <img src="/images/dbox.png" width="30" height="30" alt="">
         <strong>Dstudio</strong></span>
      </nav>
      <br>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <span class="anchor" id="formLogin"></span> 
                      
          <div class="card card-outline-secondary border-dark">
            <div class="card-header bg-dark text-success">
              <h3 class="mb-0">SignUP</h3>
            </div>
            <div class="card-body">
              <form autocomplete="off" class="form" id="formLogin" name="formLogin" role="form" form action="/register" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="container">
                    <label>Profile picture</label>
                    
                    <input type='file' id="imageUpload"  name="image" >

                    </div>
                </div>
                <div class="form-group">
                  <label for="uname1">Username</label> 
                      <input class="form-control" id="uname1" name="name" required="" type="text">
                </div>
                
                <div class="form-group">
                  <label>Email</label> 
                      <input autocomplete="new-password" class="form-control mb-2" id="email" required="" type="email" name="email">
                      <span class="invalid" id="email-status" ></span>
                </div>
                
                <div class="form-group">
                  <label>Role</label> 
                      <input autocomplete="new-password" class="form-control" id="pwd1" required="" type="text" name="role">
                </div>
                <span>Choose you're Department : </span>
                <div class="btn-group">
                 
                  <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="buttonDept">
                    Department
                  </button>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="#" onclick="chooseDept(this)">Product Development</a>
                    <a class="dropdown-item" href="#" onclick="chooseDept(this)">Sales & Marketing</a>
                    <a class="dropdown-item" href="#" onclick="chooseDept(this)">DevOps</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#" onclick="chooseDept(this)">Frontend</a>
                  </div>
                </div>
                <input type="text" style="visibility: hidden;" id="department" name="department">
                <div class="form-group">
                  <br>
                    <label for="uname1">Password</label> 
                        <input class="form-control mb-2" id="password" name="password" required="" type="password">
                        <span class="invalid" style="margin-top: 2px;" id="password-status"></span>
                  </div>
                <label class="sign-up">
					Already have an account? <a href="http://localhost:3000/signin">Log in</a>
				</label>
                  <button class="btn btn-success btn-lg float-right" type="submit" id="submit">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div> 

      <script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<script src="/js/validate.js"></script>
   
</body>
</html>  