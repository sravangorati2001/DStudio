<%- include('include/header_dstudio') %>
<br>
<!-- Example single danger button -->
<div class="form-inline  my-lg-0" style="display: inline-block; margin-left: 27%;" >
  <input class="form-control " type="search" placeholder="Search" aria-label="Search" id="inputTag">
  <button class="btn btn-outline-info  my-sm-0 mr-5" type="button" onclick="searchTag()" >Search</button>
</div>
<div class="btn-group " style="display: inline-block;">
  <button type="button" class="btn btn-success dropdown-toggle" style="width: 200px;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Choose the order
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" href="http://localhost:3000/posts/sortBy/1">Most Liked Blog</a>
    <a class="dropdown-item" href="http://localhost:3000/posts/sortBy/2">Least Liked Blog</a>
    <a class="dropdown-item" href="http://localhost:3000/posts/sortBy/3">Title's Alphabetic Order</a>
  </div>
</div>
<br>
  <% for(var i = 0; i < users.length; i++) {  %>
    <br>
  
    <div class="d-flex justify-content-center">
    <div class="container ">
      <div class="row">
        <div class="col">
      
                      
          <div class="card card-outline-secondary border-info  mx-auto" id='<%= i+1 %>' style="width: 55%;">
            <div class="card-header  text-success" style="background-color: rgb(185, 174, 174);">
              <label class="mb-0 text-success"><h3 style="display: inline-block;"><span style="cursor: pointer; " onclick="location.href='http://localhost:3000/post/<%=users[i]._id %>';"><%=users[i].title %> </span></h3>- <a href="http://localhost:3000/user/posts/<%=users[i].userId %>" class="text-secondary"><%=users[i].name %></a></label>
              <div class="float-right">
                <button class="btn btn-outline-warning mx-3" onclick="editPost('<%=users[i]._id %>','<%= i+1 %>')">
                  <i class="fa fa-pencil" style="font-size:20px; color: black;"></i>
                  </button>
                  <button class="btn btn-danger"  onclick="deletePost('<%=users[i]._id %>','<%= i+1 %>')">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                  </svg>
                </button>
              
            </div>
            </div>
            <div class="card-body" style="overflow: hidden; height: 300px;">
              
                  <%- users[i].text  %> 
                  
                             
            </div>
            <a href='http://localhost:3000/post/<%=users[i]._id %>' > Tap to view full</a>
            
            <div class="card-footer bg-secondary text-light border-success">
              <div class="row ">
                <div class="col-sm-4 d-flex justify-content-center" >
               
                <% if(Like[i]) {%>
                 
                <div id="result+<%= i+1 %>" data-id="<%=users[i].likes.length %>" class="mt-2 mr-1 font-weight-bold"><%= users[i].likes.length%></div>
                <div class="like-unlike">
                  <img id="like-unlike-img+<%= i+1 %>" data-id="<%=users[i]._id %>"  onclick="likeUnlike('<%=i+1%>','<%=users[i]._id %>','<%=users[i].name %>')"  src="/images/like1.png" width="35" height="35" class="unlike" alt="" style="cursor: pointer; display: inline;" >
                <div  style="cursor: pointer; display: none; margin-top: 5px;" class="text" id="text+<%= i+1 %>">Unlike</div></div>
              
                 <% } %>

                 <% if(!Like[i]) {%>
                 
                  <div id="result+<%= i+1 %>" data-id="<%=users[i].likes.length %>" class="mt-2 mr-1 font-weight-bold"><%= users[i].likes.length%></div>
                 <div class="like-unlike">
                  <img data-id="<%=users[i]._id %>" id="like-unlike-img+<%= i+1 %>" onclick="likeUnlike('<%=i+1%>','<%=users[i]._id %>','<%=users[i].name %>')"  src="/images/like(1).png" width="35" height="35" class="like" alt="" style="cursor: pointer; display: inline;" >
                  <div  style="cursor: pointer; display: none; margin-top: 5px;" class="text" id="text+<%= i+1%>">Like</div></div>
               
                 <% } %>
               
              </div>
                 <div class="col-sm-4 d-flex justify-content-center" >
                  <img src="/images/comment2.png" width="30" height="30" class="mr-2 mb-0" alt="" style="cursor: pointer;">
                 <div> comment </div>
                </div>
                 <div class="col-sm-4 d-flex justify-content-center" >
                  <img src="/images/share.png" width="30" height="30" class="mr-2 mb-0" alt="" style="cursor: pointer;">
                 <div> share </div></div>
              </div> 
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div> 
  
      <% } %>
  <img  src="/images/scroll.png" width="50" height="50" alt="scroll-to-top" style=" position: sticky; bottom: 0; right: 0; margin-left: 10px; margin-bottom: 10px; cursor: pointer;" onclick="scrolltoTop()">
      
  <%- include('include/footer') %>