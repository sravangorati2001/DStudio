<%- include('include/header_dstudio') %> 
  <br>
  <br>
  <div class="d-flex justify-content-center">
    <div class="container">
    <div class="row justify-content-md-center text-light">
    <h2><strong style="border-radius: 5px; width: auto; padding-left: 10px; padding-right: 10px; background-image: linear-gradient(to right, #bd1a3a, #415bda);">
      <%= user.name %></strong></h2>
  </div>
    <br>
    <div class="row">
    <img  src="<%= user.url %>" style="height: 30%; width: 20%; border-radius: 50%; border:5px outset wheat; margin-left: 40%;" alt="hello">
  </div>
  <br>
   <div class="">
    <div class="text-light font-weight-bold" style="display: inline-block; margin-left: 350px;">Connections : <%= user.count%></div>
    <div class="" style="display: inline-block;">
      <% if(sentRequest) {%> 
        <button class="btn btn-success mx-3" onclick="sendFriendRequest(this)" data-id="<%= user.name %>" id="friendButton">
          Sent Request
        </button>
       <% } %>
        <% if(isFriend) {%> 
        <button class="btn btn-success mx-3" onclick="sendFriendRequest(this)" data-id="<%= user.name %>" id="friendButton">
          Remove Friend
        </button>
       <%}%>
        <% if(!sentRequest && !isFriend) {%> 
        <button class="btn btn-success mx-3" onclick="sendFriendRequest(this)" data-id="<%= user.name %>" id="friendButton">
          Add Friend
          <img src="/images/add-friend.png" alt="add friend" width="20" height="20">
        </button>
        <%}%>
    </div>
    <div class="" style="display: inline-block;">
      <button class="btn btn-outline-warning" onclick="sendMessage('<%= user.name %>')">Send Message</button>
    </div>
   </div>
   <br>
   <br>
   <div class="d-flex justify-content-center">
   <button class="btn btn-secondary " onclick="location.href='http://localhost:3000/user/posts/<%= user.id %>'">Posts created by <%= user.name %></button>
  </div>
  </div>
</div>
<%- include('include/footer') %>